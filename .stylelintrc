{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "no-eol-whitespace": [
            true,
            {
                "ignore": [
                    "empty-lines"
                ]
            }
        ],
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "function",
                    "if",
                    "each",
                    "include",
                    "mixin"
                ]
            }
        ]
    }
}
